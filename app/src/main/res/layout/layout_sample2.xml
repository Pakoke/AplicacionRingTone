<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    style="@style/Material.Drawable.Ripple.Wave"
    android:rowCount="2"
    android:columnCount="2"
    android:id="@+id/grid_layout_type2"
    android:clickable="true"
    android:useDefaultMargins="false">
    <ImageView
        android:id="@+id/image_type2"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/title_type2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/image_type2"
        android:layout_alignRight="@+id/content_type2"
        android:layout_alignEnd="@+id/content_type2" />

    <TextView
        android:id="@+id/content_type2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@+id/image_type2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/title_type2" />

</RelativeLayout>